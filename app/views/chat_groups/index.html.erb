<div class="container-fluid">
	<div class="row">
		<div class="col-lg-12">
			<div class="page-header">
				<h2>Wichat App</h2>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class=”ui segment”>
			 <h3>Mailbox</h3>

			 <div class="ui list">
			  <div class=”item”>
			   <% @chat_groups.each do |chat_group| %>
			   <% if chat_group.user_1_id == current_user.id || chat_group.user_2_id == current_user.id %>
			    <% if chat_group.user_1_id == current_user.id %>
			      <% recipient = User.find(chat_group.user_2_id) %>
			    <% else %>
			      <% recipient = User.find(chat_group.user_1_id) %>
			    <% end %>
			    <%= link_to recipient.email, chat_group_messages_path(chat_group)%>
			   <% end %>
			  <% end %>
			  </div>
			 </div>
			</div>

			<div class=”ui segment”>
			 <h3>All Users</h3>
			  <div class=”ui list”>
			   <% @users.each do |user| %>
			    <% if user.id != current_user.id %>
			    	<div class=”item”>
			   			<%= user.email %> 
			   			<div class="btn-group">
			   				<%= link_to 'New Chat', chat_groups_path(user_1_id: current_user.id, user_2_id: user.id), method: 'post', class: "btn btn-primary"%>
			   			</div>
				 		</div>
				  <% end %>
				 <% end %>
			 </div>
		</div>
	</div>
</div>